  <script>
    function switchLanguage(lang) {
      document.querySelectorAll('.lang').forEach(el => {
        el.classList.remove('visible');
      });
      document.querySelectorAll('.' + lang).forEach(el => {
        el.classList.add('visible');
      });
    }

    // Язык по умолчанию — русский
    switchLanguage('ru');
  </script>

